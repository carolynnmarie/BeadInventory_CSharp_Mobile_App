@page
@model BeadDotNetApp.Pages.StringingMaterials.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Stringing Materials</h2>
<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="Category" asp-items="Model.Categories">
            <option value="">All</option>
            <option value="Model.Categories">None</option>
        </select>  
        <input type="submit" value="Search"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StringingMaterial[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StringingMaterial[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StringingMaterial[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StringingMaterial[0].Price_Per_Foot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StringingMaterial[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StringingMaterial[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StringingMaterial) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price_Per_Foot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-page="../Findings/Index">Go To Findings</a>
    <a asp-page="../Beads/Index">Go To Beads</a>
</p>
